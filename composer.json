{
  "name": "halfje-bruin/halfje-bruin",
  "description": "Halfje-Bruin WordPress site",
  "authors": [
    {
      "name": "Kees de Bruin",
      "homepage": "https://www.halfje-bruin.nl/"
    }
  ],
  "type": "project",
  "repositories": [
    {
      "type":"composer",
      "url":"https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "git@git.home.lan:base/hb-plugin.git"
    }
  ],
  "config": {
    "vendor-dir": "vendor"
  },
  "require": {
    "php": ">=5.3.0",
    "johnpbloch/wordpress": ">=4.9",
    "vlucas/phpdotenv": "^1.0.6",
    "kdb/hb-plugin": "dev-master",
    "wpackagist-plugin/advanced-custom-fields": "^4.4.12",
    "wpackagist-plugin/backupwordpress": "^3.6.4",
    "wpackagist-plugin/classic-editor": "^0.4",
    "wpackagist-plugin/classic-smilies": "^1.3",
    "wpackagist-plugin/crayon-syntax-highlighter": "^2.8.4",
    "wpackagist-plugin/disqus-comment-system": "^3.0.16",
    "wpackagist-plugin/enable-media-replace": "^3.2.6",
    "wpackagist-plugin/force-regenerate-thumbnails": "^2.0.6",
    "wpackagist-plugin/gutenberg": "^3.5.0",
    "wpackagist-plugin/loco-translate": "^2.1.4",
    "wpackagist-plugin/php-compatibility-checker": "^1.4.6",
    "wpackagist-plugin/post-snippets": "^3.0.5",
    "wpackagist-plugin/ricg-responsive-images": "^3.1.1",
    "wpackagist-plugin/series": "^2.0.0",
    "wpackagist-plugin/shortcodes-ultimate": "^5.0.4",
    "wpackagist-plugin/wordpress-importer": "^0.6.4",
    "wpackagist-theme/twentysixteen": "*",
    "wpackagist-theme/gridsby": "*",
    "wpackagist-theme/atomic-blocks": "*"
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "app/plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "app/mu-plugins/{$name}/": [
        "type:wordpress-muplugin"
      ],
      "app/themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  }
}
